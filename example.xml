
<mujoco model="pendulum">
  <compiler angle="radian" inertiafromgeom="true"/>
  <default>
    <joint armature="0.001" damping="1" limited="true"/>
    <geom contype="0" conaffinity="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
    <site type="sphere" size="0.001" rgba="0.7 0.7 0 1"/>
  </default>
  <worldbody>
    <light directional="true" ambient="0.2 0.2 0.2" diffuse="0.6 0.6 0.6" specular="0 0 0" pos="0 0 1.3" mode="trackcom"/>
    <body name="base" pos="0 0 0">
      <geom name="rail" type="capsule" size="0.02 0.2" rgba="0.9 0.2 0.2 1" mass="0.01"/>
      <joint name="slide" type="slide" pos="0 0 0" axis="1 0 0" range="-0.2 0.2"/>
      <body name="cart" pos="0 0 0">
        <geom name="cart_geom" type="box" size="0.03 0.03 0.03" rgba="0.9 0.2 0.2 1" mass="1.0"/>
        <joint name="hinge" type="hinge" pos="0 0 0" axis="0 1 0" range="-3.14 3.14"/>
        <body name="pole" pos="0 0 0.05">
          <geom name="pole_geom" type="capsule" size="0.02 0.15" pos="0 0 0.1" rgba="0.9 0.2 0.2 1" mass="0.1"/>
        </body>
      </body>
    </body>
  </worldbody>
  <actuator>
    <motor joint="slide" ctrlrange="-1 1" forcelimited="true" forcerange="-1 1"/>
  </actuator>
</mujoco>
